<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ted.jots.myjot"
    android:versionCode="4"
    android:versionName="2.1">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        <receiver android:name=".main.WidgetForOneXOne">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ACTION.WIDGET.UPDATE.FROM.ACTIVITY" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_onexone" />
        </receiver>
        <receiver android:name=".main.WidgetForFourXOne">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ACTION.WIDGET.UPDATE.FROM.ACTIVITY" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_fourxone" />
        </receiver>
        <receiver android:name=".main.WidgetForFourXTwo">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ACTION.WIDGET.UPDATE.FROM.ACTIVITY" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_fourxtwo" />
        </receiver>
        <receiver android:name=".main.WidgetForFourXThree">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ACTION.WIDGET.UPDATE.FROM.ACTIVITY" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_fourxthree" />
        </receiver>
        <receiver android:name=".main.WidgetForFourXFour">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ACTION.WIDGET.UPDATE.FROM.ACTIVITY" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_fourxfour" />
        </receiver>

        <activity android:label="@string/share_to_note" android:name=".main.ReceiveDataActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>

        </activity>

        <activity
            android:name=".main.MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".service.WatchingService" android:exported="false" />
    </application>

</manifest>
