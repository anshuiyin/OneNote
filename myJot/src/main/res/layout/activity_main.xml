<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:background="@color/widget_bg_color_default"
        android:clickable="true">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="46dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/jot_input_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="sans-serif-light"
                    android:gravity="top"
                    android:hint="@string/touch_to_input"
                    android:minLines="1"
                    android:padding="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

            </LinearLayout>

        </ScrollView>


        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/jot_jot_btn_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="#1E88E5"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/ic_action_new" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/menu_btn_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="24dp"
            android:background="#1E88E5"
            android:visibility="gone"
            materialdesign:animate="true"
            materialdesign:iconDrawable="@drawable/ic_menu" />

    </RelativeLayout>


</RelativeLayout>
