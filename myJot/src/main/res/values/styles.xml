<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_logo_color</item>
        <item name="colorPrimaryDark">@color/app_logo_color</item>
        <item name="colorAccent">@color/app_logo_color</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
    </style>

    <style name="AppTheme.MainTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/transparent_drawable</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/MainActivityAnimation</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="MainActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_fragment_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_fragment_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_fragment_close_out</item>
    </style>

    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
    </style>

    <!-- Style for a custom Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="AppPreference.DialogPreference">
    </style>

    <style name="AppPreference.DialogPreference.WithButton">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

</resources>
